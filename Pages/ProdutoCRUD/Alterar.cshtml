@page
@model Ecommerce_CyberKnight.Pages.ProdutoCRUD.AlterarModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterar Produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/alterar/style-tela-alterar-produto.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="row">
        <img id="logo" src="~/img/alterar/logo.webp" alt="" style="width: 130px;">
        <div id="barra-lateral" class="col-3">
            <label id="letreiro">Cyber Knights<br>E-commerce</label>
        </div>
        <div class="col-9">
            <header>
                <div>
                    <button>Início</button>
                    <span id="traco">|</span>
                    <span id="produto">Produtos</span>
                    <span id="clientes">Clientes</span>
                    <span id="categoria">Categorias</span>
                    <span id="unid">Unidade de Medida</span>
                </div>
                <div>
                    <i id="carrinho" class="bi bi-cart"></i>
                    <span id="traco-dois">|</span>
                    <i id="sair" class="bi bi-box-arrow-right"></i>
                </div>
            </header>

                <div class="flex-container">
                    <div id="card-login">
                      <form method="post" class=" mt-3" enctype="multipart/form-data">
                        <input class="form-control" type="hidden" asp-for="produtos.Id" />
                        <br>
                        <br>
                        <h1>Alterar Produto</h1>
                        <label id="nome-um">Nome:</label>
                        <label id="categoria-label">Categoria:</label>
                        <div>
                            <input id="nome" asp-for="produtos.Nome" type="text">
                            <span asp-validation-for="produtos.Nome" class="text-danger"></span>
                            <input id="categoria-input" asp-for="produtos.categoria" type="text">
                            <span asp-validation-for="produtos.categoria" class="text-danger msg-erro"></span>
                            <i class="bi bi-caret-down-fill"></i>
                        </div>
                        <br>
                        <div>
                            <label id="descricao-um">Descrição:</label>
                        </div>
                            <input id="descricao" asp-for="produtos.descricao" type="text">
                            <span asp-validation-for="produtos.descricao" class="text-danger"></span>
                        <br>
                        <br>
                        <label id="preco-label">Preço:</label>
                        <span asp-validation-for="produtos.preco" class="text-danger"></span>
                        <label id="unid-label"> Unidade de Medida:</label>
                        <br>
                        <span asp-validation-for="produtos.unidadeMedida" class="text-danger"></span>
                        <div>
                            <input id="preco-input" asp-for="produtos.preco" type="text">
                            <input id="unid-input" asp-for="produtos.unidadeMedida" type="text">
                            <i class="bi bi-caret-down-fill"></i>
                        </div>
                        <br>
                        <div>
                            <label id="estoque-label">Estoque:</label>
                            <label id="img-label">Inserir Imagem:</label>
                        </div>
                        <div>
                            <input id="estoque-input" asp-for="produtos.estoque" type="text">
                        </div>
                        <button id="btn-enviar" type="submit" class="btn btn-primary">Enviar</button>
                      </form>
                    </div>
                </div>
        </div>
    </div>
</body>

</html>

