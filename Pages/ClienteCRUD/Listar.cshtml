@page
@model ListarModel
@{
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Listagem de Clientes</title>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/listagem-cliente/style-tela-listagem-cliente.css">
</head>

<body>
    <div class="col-12">
        <header>
            <div>
                <button>Início</button>
                <span id="traco">|</span>
                <span id="produto">Produtos</span>
                <span id="clientes">Clientes</span>
                <span id="categoria">Categorias</span>
                <span id="unid">Unidade de Medida</span>
            </div>
            <div>
                <i id="carrinho" class="bi bi-cart"></i>
                <span. id="traco-dois">|</span.>
                <i id="sair" class="bi bi-box-arrow-right"></i>
            </div>
        </header>
        <header id="linha1">
            <h1>Listagem de Clientes</h1>
            <a id="btn-incluir" class="btn btn-primary" asp-page="../ClienteCRUD/incluir">
                Incluir
             </a>
        </header>
        <div class="flex-container">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-1" scope="col"><span>ID</span></th>
                        <th class="col-2" scope="col"><span>Nome</span></th>
                        <th class="col-2" scope="col"><span>CPF</span></th>
                        <th class="col-2" scope="col"><span>Email</span></th>
                        <th class="col-1" scope="col"><span>Celular</span></th>
                        <th class="col-1" scope="col"><span>Cep</span></th>
                        <th class="col-2" scope="col"><span>Data de Nasc.</span></th>
                        <th hidden class="col-2" scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model.Clientes)
                    {
                        
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Cpf</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.Cep</td>
                        <td>@cliente.DataDeNascimento</td>
                        <td>
                            <div style="display: flex">

                                <a asp-page="../ClienteCRUD/Alterar"
                                        asp-route-id="@cliente.Id" id="btn-editar" class="btn btn-primary">
                                    Editar
                                </a>
                                <span class="espaco"></span>
                                <form method="post"
                                        asp-page-handler="delete"
                                        asp-route-id="@cliente.Id">
                                    <button id="btn-excluir" class="btn btn-danger">Excluir</button>
                                </form>

                                @if (Model.EmailsAdmins.Contains(cliente.Email)) {
                                    <!--RETIRAR DA FUNÇÃO ADMINISTRADOR-->
                                    <form class="d-inline-block"
                                        asp-page-handler="deladmin"
                                        asp-route-id="@cliente.Id"
                                         method="post">
                                        
                                         <button
                                             class="btn btn-danger btn-sm"
                                             onclick="confirmarExclusao(this);"
                                             type="button"
                                             title="Clique aqui de você desejar retirar o usuário \"@cliente.Nome\" da função de Administrador"
                                         >
                                            Remover Admin
                                        </button>
                                    </form>
                                } else {

                                    <!--TORNAR ADMINISTRADOR-->
                                    <form class="d-inline-block"
                                          asp-page-handler="setadmin"
                                          asp-route-id="@cliente.Id"
                                          method="post">
                                        <button
                                            class="btn btn-danger btn-sm"
                                            onclick="confirmarExclusao(this);"
                                            type="button"
                                            title="Clique aqui de você desejar tornar o usuário \" @cliente.Nome\" um Administrador">
                                                Tornar Admin
                                        </button>
                                    </form>

                                }
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
       </div>
</body>

</html>
