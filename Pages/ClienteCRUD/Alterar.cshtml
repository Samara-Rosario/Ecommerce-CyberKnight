@page
@model AlterarModelNovo
@{
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterar Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/alterar-cliente/style-tela-alterar-clientes.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="row">
        <img id="logo" src="~/img/assets/crud-cliente/logo.webp" alt="" style="width: 130px;">
        <div id="barra-lateral" class="col-3">
            <label id="letreiro">Cyber Knights<br>E-commerce</label>
        </div>

	



        <div class="col-9">

            <header>
                <div>
                    <button>Início</button>
                    <span id="traco">|</span>
                    <span id="produto">Produtos</span>
                    <span id="clientes">Clientes</span>
                    <span id="categoria">Categorias</span>
                    <span id="unid">Unidade de Medida</span>
                </div>
                <div>
                    <i id="carrinho" class="bi bi-cart"></i>
                    <span id="traco-dois">|</span>
                    <i id="sair" class="bi bi-box-arrow-right"></i>
                </div>
            </header>

			<h1>Alterar Cliente "@Model.clientes.Nome"</h1>

			<input type="hidden" asp-for="clientes.Id" />
			<br />

			<div class="col-5">
				<label asp-for="clientes.Nome" class=" control-label">Nome:</label>
				<input asp-for="clientes.Nome" class="form-control" />
				<span asp-validation-for="clientes.Nome" class="text-danger"></span>
			</div>
			<br />

			<div class="col-5">
				<label asp-for="clientes.Cpf" class=" control-label">CPF:</label>
				<input asp-for="clientes.Cpf" class="form-control" />
				<span asp-validation-for="clientes.Cpf" class="text-danger"></span>
			</div>
			<br />

			<div class="col-5">
				<label asp-for="clientes.Email" class="control-label">Email:</label>
				<input asp-for="clientes.Email" class="form-control" />
				<span asp-validation-for="clientes.Email" class="text-danger"></span>
			</div>
			<br />

			<div class="col-5">
				<label asp-for="clientes.Telefone" class=" control-label">Telefone:</label>
				<input asp-for="clientes.Telefone" class="form-control" />
				<span asp-validation-for="clientes.Telefone" class="text-danger"></span>
			</div>
			<br />
				<div class="col-1">
					<label asp-for="clientes.Telefone" class="control-label">Email:</label>
					<input asp-for="clientes.Telefone" class="form-control" />
					<span asp-validation-for="clientes.Telefone" class="text-danger"></span>
				</div>
				<br />
				<div class="col-1">
				<label asp-for="clientes.Cep" class=" control-label">Cep:</label>
				<input asp-for="clientes.Cep" class="form-control" />
				<span asp-validation-for="clientes.Cep" class="text-danger"></span>
			</div>
			<br />
			<div class="col-5">
				<label asp-for="clientes.DataDeNascimento" class=" control-label">Data de Nascimento:</label>
				<input asp-for="clientes.DataDeNascimento" class="form-control" />
				<span asp-validation-for="clientes.DataDeNascimento" class="text-danger"></span>
			</div>
			<br />
				<label asp-for="clientes.Login" class=" control-label">Login:</label>
				<input asp-for="clientes.Login" class="form-control" />
				<span asp-validation-for="clientes.Login" class="text-danger"></span>
			</div>
			<br />
			<label asp-for="clientes.Senha" class=" control-label">Senha:</label>
			<input asp-for="clientes.Senha" class="form-control" />
			<span asp-validation-for="clientes.Senha" class="text-danger"></span>
		</div>
		<br />
		<label asp-for="clientes.ConfirmarSenha" class=" control-label">Confirmar Senha:</label>
		<input asp-for="clientes.ConfirmarSenha" class="form-control" />
		<span asp-validation-for="clientes.ConfirmarSenha" class="text-danger"></span>
	</div>
	<br />
			</div>
			<br />
	        <button id="btn-enviar" type="submit" class="btn btn-primary">Enviar</button>
        </div> 
	</div>
</body>

</html>