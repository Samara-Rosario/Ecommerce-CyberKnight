@page
@model IncluirModelNovo
@{
	Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incluir Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/incluir-cliente/style-tela-incluir-clientes.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="row">
        <div id="barra-lateral" class="col-3">
			<img id="logo" src="~/img/assets/crud-cliente/logo.webp" alt="" style="width: 130px;">
            <label id="letreiro">Cyber Knights<br>E-commerce</label>
        </div>
        <div class="col-9">
            <header>
                <div>
                    <button>Início</button>
                    <span id="traco">|</span>
                    <span id="produto">Produtos</span>
                    <span id="clientes">Clientes</span>
                    <span id="categoria">Categorias</span>
                    <span id="unid">Unidade de Medida</span>
                </div>
                <div>
                    <i id="carrinho" class="bi bi-cart"></i>
                    <span id="traco-dois">|</span>
                    <i id="sair" class="bi bi-box-arrow-right"></i>
                </div>
            </header>

            <div class="flex-container">
                <div id="card-login">
                    <br>
                    <br>
                    <h1>Incluir Novos Clientes</h1>
                    <label>Nome:</label>
                    <div>
                        <input type="text">
                    </div>
                    <label>CPF:</label>
                    <div>
                        <input type="text">
                    </div>
                    <label>E-mail:</label>
                    <div>
                        <input type="text">
                    </div>
                    <label>Celular:</label>
                    <div>
                        <input type="tel">
                    </div>
                    <label>Cep:</label>
                    <div>
                        <input name="cep" type="text" id="cep" value="" size="10" maxlength="9"
                               onblur="pesquisacep(this.value);" type="number">
                        <br>
                        <span id="texto-endereco"></span>
                    </div>
                    <label>Login:</label>
                    <div>
                        <input type="text">
                    </div>
                    <label>Senha:</label>
                    <div>
                        <input type="password">
                    </div>
                    <label>Confirmar senha:</label>
                    <div>
                        <input type="password">
                    </div>
                    <button id="btn-enviar" type="button" class="btn btn-primary">Enviar</button>
                </div>
            </div>

        </div>


        <script>
            var textoEndereco = document.querySelector("#texto-endereco");


            function limpa_formulario_cep() {
                //Limpa valores do formulário de cep.
                textoEndereco.innerHTML = "";
            }


            function meu_callback(conteudo) {
                console.log(conteudo);

                if (!("erro" in conteudo)) {
                    //Atualiza os campos com os valores.
                    textoEndereco.innerHTML = `${conteudo.logradouro}, ${conteudo.bairro}, ${conteudo.localidade}/${conteudo.uf}`;

                } //end if.
                else {
                    console.error("Com error");
                    //CEP não Encontrado.
                    limpa_formulario_cep();
                    textoEndereco.innerHTML = "CEP não encontrado.";
                }
            }

            function pesquisacep(valor) {

                //Nova variável "cep" somente com dígitos.
                var cep = valor.replace(/\D/g, '');

                //Verifica se campo cep possui valor informado.
                if (cep != "") {

                    //Expressão regular para validar o CEP.
                    var validacep = /^[0-9]{8}$/;

                    //Valida o formato do CEP.
                    if (validacep.test(cep)) {

                        //Preenche os campos com "..." enquanto consulta webservice.
                        textoEndereco.innerHTML = "...";
                  

                        //Cria um elemento javascript.
                        var script = document.createElement('script');

                        //Sincroniza com o callback.
                        script.src = 'https://viacep.com.br/ws/' + cep + '/json/?callback=meu_callback';

                        //Insere script no documento e carrega o conteúdo.
                        document.body.appendChild(script);

                    } //end if.
                    else {
                        //cep é inválido.
                        limpa_formulario_cep();
                        textoEndereco.innerHTML = "Formato de CEP inválido.";
                    }
                } //end if.
                else {
                    //cep sem valor, limpa formulário.
                    limpa_formulario_cep();
                }
            };
        </script>
    </div>
</body>

</html>

