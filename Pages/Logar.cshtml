@page
@model Ecommerce_CyberKnight.Pages.LogarModel
@{
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

	<link rel="stylesheet" href="~/css/logar/signin.css">
	<link rel="stylesheet" href="~/css/olhinho/signin.css">

	<!--PATCH PARA FUNCOINAMENTO DA FUNÇÃO SHOW HIDE PASSWORD-->
	<style>
		
		#eye-icon-ctn{
			position: absolute;
			right: 1em;
			top: 0.2em;
		}

		#eye-icon-ctn:hover{
			color: deepskyblue;
		}

		#inputSenha {
			padding-right: 2em;
		}
	</style>


	<title>Sign-in</title>
</head>

<body>
	<div id="card-principal" class="row">
		<div id="col-img" class="col-4">
			<div id="img-molde">
			</div>
		</div>

		<div id="col-form" class="col-8 container">
			<div id="card-form" class="card">
				<img id="logo" src="~/img/assets/logar/logo.webp" alt="" style="width: 90px;">
				<h1>Cyber Knight</h1>
				<h2>E-commerce</h2>
				<h3>Por favor faça login para acessar sua conta de administrador do site.</h3>


				<div id="msgError" asp-validation-summary="ModelOnly"></div>

				<form method="post">
					<div class="mb-3">
						<label for="exampleFormControlInput1" class="form-label">Email</label>
						<input asp-for="Dados.Email" type="email" class="form-control" id="exampleFormControlInput1"
							   placeholder="Digite seu e-mail">
							  <br />
						<span asp-validation-for="Dados.Email" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label for="exampleFormControlInput1" class="form-label">Senha</label>
						<div style="position: relative" style="rigth: 15vw;">
							<input asp-for="Dados.Senha" type="password" class="form-control" id="inputSenha" placeholder="Digite sua senha">
							<div id="eye-icon-ctn">
								<i onclick="hideSenha()" id="btnSenha" class="bi bi-eye-slash"></i>
							</div>
							<span asp-validation-for="Dados.Senha" class="text-danger"></span>
						</div>

					</div>
					<div class="mb-3 form-check">
						<input type="checkbox" class="form-check-input" id="exampleCheck1">
						<label class="form-check-label" for="exampleCheck1">Lembrar de mim</label>
					</div>
					
					<input type="hidden" name="returnUrl" value="@Model.ReturnURL" />

					<div class="d-grid gap-2 mx-auto">
						<button id="btn-entrar" type="submit" class="btn btn-outline-info">Entrar</button>
					</div>
				</form>

				<div class="justify-center">
					<hr />
				</div>

				<p id="link-senha" src="signin.html" alt="" style="width: 202px;">
					<a href="./signup.html">
						
					</a>
				</p>

				<p id="link-cad" src="signin.html" alt="" style="width: 202px">
					<a asp-page="/RegistrarClientes">
						Cadastre-se
					</a>
				</p>
			</div>
		</div>
	</div>

	<script src="~/js/olho-mostrar/script.js"></script>
	<!-- script src="../js/signin.js"></script -->
</body>

</html>
