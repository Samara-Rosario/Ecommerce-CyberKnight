@page
@model Ecommerce_CyberKnight.Pages.IndexModel

@using Microsoft.AspNetCore.Identity
@using Ecommerce_CyberKnight.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    Layout = "";

    var appUser = await UserManager.GetUserAsync(User);

    bool isInRoleAdmin = false;

    if (User.Identity.IsAuthenticated && appUser != null) {
        isInRoleAdmin = await UserManager.IsInRoleAsync(appUser, "admin");
    }


    string nomeUser = "";

    if (appUser != null) {
        if (appUser.Nome.IndexOf(" ") < 0) {
            nomeUser = appUser.Nome;
        } else {
            nomeUser = @appUser.Nome.Substring(0, appUser.Nome.IndexOf(" "));
        }
    }
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
