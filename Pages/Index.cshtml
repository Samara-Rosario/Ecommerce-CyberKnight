            </div>

            <hr>

            <div class="filtro-categoria">
                <h5 class="filtro-titulo">Categoria</h5>
                @foreach (var categoria in Model.categorias)
                {
                    <div title="@categoria.Descricao">
                        <input value="@categoria.Id" type="checkbox">
                        <span>@categoria.Nome</span>
                    </div>
                }

            </div>

            <hr>

            <div id="filtro-preço">
                <div>
                    <h5 class="filtro-titulo">Faixa de preço</h5>
                </div>
                <div id="div-input-range">

                    <input id="dado-filtro-preco" type="text" class="js-range-slider" name="my_range" value="" />

                </div>
            </div>

            <div id="container-btn-filtro">
                <br/>
                <br/>
                <br />
                <button id="btn-filtrar">
                    Filtrar
                </button>
            </div>

        </div>
        <div id="conteudo-principal" class="col">
            <header>
                <div>
                    <a href="/Logar" id="btn-login">
                        <button id="abtn-login">
                            Login
                        </button>
                    </a>
                    <span id="traco-1">|</span>
                    <span id="novos-produtos">
                        Novos produtos
                    </span>
                    <span id="caixa-pesquisa">
                        <i id="btn-lupa" class="bi bi-search"></i>
                        <input value="@Model.termoBusca" id="pesquisa-produto" placeholder="Procurar por produtos..." type="text">
                    </span>
                </div>
                <div id="login-control">
                    @if (SignInManager.IsSignedIn(User)) {
                        <button id="btn-login-adm">
                            Olá, @nomeUser
                        </button>
                        @if (isInRoleAdmin) {
                            <a id="btn-adm-sys" title="Administrar dados do sistema" href="/ProdutoCRUD/Listar">
                                <i class="bi bi-person-workspace"></i>
                            </a>
                        }else{
                            <i id="carrinho-compras" class="bi bi-cart"></i>
                        }
                        <span id="traco-2">
                            |   
                        </span>
                        
                        <form id="logoutForm" class="form-inline" asp-area="" asp-page="/Login" asp-page-handler="logout" asp-route-returnURL="@Url.Page("/Index", new { area = "" })">
                            <button id="logout" type="submit" title="Sair do Sistema"><i class="bi bi-box-arrow-right"></i></button>
                        </form>
                    }else{
                        <a href="/Logar" id="btn-login" style="margin-right: 30px">
                            <button id="abtn-login">
                                Login
                            </button>
                        </a>
                    }
                </div>
            </header>

            <div id="container-principal-banner">
                <div id="container-titulo">
                    <span><img src="./img/icone-estrela.png" alt=""></span>
                    <h1>Principais ofertas</h1>
                </div>

                <div id="carouselExampleIndicators" class="carousel slide">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                    </div>

                    <div class="carousel-inner">
                        <div class="carousel-item  active">
                            <div class="container-banner">
                                <img id="img-banner-2" src="~/img/assets/home/oferta_2.webp" class="img-banner" alt=""/>
                                <img src="~/img/assets/home/oferta_4.webp" class="img-banner" alt="...">
                            </div>
                        </div>

                        <div class="carousel-item">
                            <div class="container-banner">
                                <img src="~/img/assets/home/novo_banner_pedroca.webp" class="img-banner" alt="...">
                                <img src="~/img/assets/home/oferta_3.webp" class="img-banner" alt="...">
                            </div>
                        </div>
                    </div>

                </div>
                <button class="carousel-control-prev-edited" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next-edited" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            
            <div id="area-interemdiaria">
                <div id="linha-1">
                    <h2 id="produtos">Produtos</h2>
                    <span style="margin-bottom: 20px">
                        <a id="link-ver-tudo" href="/#produtos">
                            Ver tudo
                        </a>
                    </span>
                </div>
                <div id="linha-2">
                    <div>
                        <span class="btn-filtro-ordenacao"><a href="/#produtos">Todos os produtos</a></span>
                        <span class="btn-filtro-ordenacao"><a href="/#produtos">Todas as categorias</a></span>
                    </div>
                    <div>
                        <span id="ordenar-produto">Ordenar por:</span>
                        <span id="select-ordenacao">
                            <select id="select-ordenar" class="form-select">
                                <option value="1">Por Nome - Crescente</option>
                                <option value="2">Por Nome - Descrescente</option>
                                <option value="3">Por Preço - Crescente</option>
                                <option value="4">Por Preço - Descrescente</option>
                            </select>
                        </span>
                    </div>
                </div>
            </div>

            <div id="listagem-produtos">

                @if(Model.Produtos.Count > 0){
                    @foreach (var produto in Model.Produtos){
                   
                        <div class="card-produto" title="@produto.descricao">
                            <a asp-page="/Detalhes-produto" asp-route-id="@produto.Id"> 
                                <img class="img-produto" src="~/img/produto/@String.Concat(produto.Id.ToString("D6"),".jpg")" alt="">
                            </a >   
                            <h3>
                              <a asp-page="/Detalhes-produto" asp-route-id="@produto.Id">
                                @produto.Nome
                                </a>
                            </h3>
                      
                            <div>
                
                                <span class="ctn-valor">R$ @produto.preco.ToString("C2")</span>
                                <button>
                                    <i class="bi bi-bag-check-fill"></i>
                                </button>
                            </div>
                        </div>
                    }
                }else{
                    <h1 style="text-align: center;">Nenhum Produto Encontrado</h1>
                }
            </div>

            <div class="container text-center">
                <nav aria-label="page navigation example">
                    <ul class=" pagination">
                        @for (int i = 1; i <= Model.QuantidadePagina; i++)
                        {
                            @if (i == Model.QuantidadePagina)
                            {
                                <li onclick="enviarForm(@i)" class="page-item"><a class="page-link">@i</a></li>
                            }
                            else
                            {
                                <li onclick="enviarForm(@i)" class="page-item"><a class="page-link">@i</a></li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        </div>


    </div>

    <form id="form-filtro" hidden action="/" method="get">
        <input type="hidden" name="o" value="0" id="o" />
        <input type="hidden" name="p" value="1" id="p" />
        <input type="text" name="q" id="q" />
        <input type="hidden" name="cats" id="cats" />
        <input type="hidden" name="valMin" id="valMin" />
        <input type="hidden" name="valMax" id="valMax" />
    </form>


    <script>

        var dadosFiltroPreco = document.getElementById("dado-filtro-preco");
        var formFiltro = document.getElementById("form-filtro");
        var btnFiltrar = document.getElementById("btn-filtrar");
        var pesquisaProduto = document.getElementById("pesquisa-produto");
        var selectOrdenar = document.getElementById("select-ordenar");
        
        var catSelected = document.querySelectorAll(".filtro-categoria input[type='checkbox']");
        var inputsOrdem = document.querySelectorAll("input[ordem]");

        var query = location.search.slice(1);
        var partes = query.split('&');
        var parametros = {};
        
        partes.forEach(function (parte) {
            var chaveValor = parte.split('=');
            var chave = chaveValor[0];
            var valor = chaveValor[1];
            parametros[chave] = valor;
        });
   
        selectOrdenar.addEventListener("change", (obj) => {
            formFiltro.o.value = obj.target.value;
            console.log(formFiltro.o)

            inputsOrdem.forEach((item) => {
                if (item.value == obj.target.value){
                    item.checked = true;
                }
            });

            enviarForm(); 
        });

        btnFiltrar.addEventListener("click", enviarForm);
        pesquisaProduto.addEventListener("keypress", (evt) => {
            if (evt.keyCode == 13) {
                enviarForm();
            }
            console.log(evt);
        });

        function enviarForm(numPagina = 1) {

            if (dadosFiltroPreco.from || dadosFiltroPreco.from == 0) {
                formFiltro.valMin.value = dadosFiltroPreco.from;
            } else if (parametros.valMin) {
                formFiltro.valMin.value = parametros.valMin;
            }else{
                formFiltro.valMin.value = 0;
            }

            if (dadosFiltroPreco.to) {
                formFiltro.valMax.value = dadosFiltroPreco.to;
            } else if (parametros.valMax) {
                formFiltro.valMin.value = parametros.valMax;
            } else {
                formFiltro.valMin.value = 30;
            }

            console.log(typeof(numPagina));

            formFiltro.q.value = pesquisaProduto.value.trim();

            if (typeof(numPagina) == "number") {
                formFiltro.p.value = numPagina;
            }else{
                formFiltro.p.value = 1;
            }

            inputsOrdem.forEach((item) => {
                if(item.checked){
                    formFiltro.o.value = item.value;
                }
            });

            formFiltro.cats.value = "";

            document.querySelectorAll(".input-categoria").forEach((item) => {
                if (item.checked) {
                    formFiltro.cats.value += item.value + ",";
                }
            });

            listaCat = "";

            catSelected.forEach((input) => {
                if (input.checked) {
                    formFiltro.cats.value += input.value + ",";
                }
            });

            formFiltro.submit();
        }

        var minVal = parametros.valMin || 0;
        var maxVal = parametros.valMax || 30;
        var listaCategoria = "@(Model._listaCategorias)";
        var ordem = @Model._ordem;
        var valorProdMaximo = @Model._valorProdMaximo;



        listaCategoria = listaCategoria.split(",");



        //Seleciona cada checkbox de categoria filtrada no backend
        catSelected.forEach((cat) => {
            listaCategoria.forEach((ele) => {
                if (cat.value == ele) {
                    cat.checked = true;
                }
            })
        });

        //Mantem a ordenalção selecionada para os controles de barra lateral e select direito
        switch (ordem) {
            case 1:
                inputsOrdem[0].checked = true;
                selectOrdenar.options[0].selected = true;
                
                break;
            case 2:
                inputsOrdem[1].checked = true;
                selectOrdenar.options[1].selected = true;

                break;
            case 3:
                inputsOrdem[2].checked = true;
                selectOrdenar.options[2].selected = true;

                break;
            case 4:
                inputsOrdem[3].checked = true;
                selectOrdenar.options[3].selected = true;

                break;
            defaut:
                console.error("Tipo de ordenação inválida oriunda do servidor.");
        }


        //Construção do input range com dois valores
        $(".js-range-slider").ionRangeSlider({
            type: "double",
            min: 0,
            max: valorProdMaximo,
            from: minVal,
            to: maxVal,
            grid: false,
            skin: "round",
            prefix: "R$ ",
            onFinish: function(data) {
                dadosFiltroPreco = data;
            },
            onStart: function(data) {
            dadosFiltroPreco = data;
                console.log(data);
                data.from = minVal;
                data.to = maxVal;
            },
            onChange: function(data){
                dadosFiltroPreco = data;
            }
        });




    </script>

</body>

</html>