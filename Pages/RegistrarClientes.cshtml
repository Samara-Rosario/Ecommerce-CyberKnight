@page
@model Ecommerce_CyberKnight.Pages.RegistrarClientesModel
@{
    Layout = "";
}

<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/style-tela-cadastro-de-clientes.css">
  <link rel="stylesheet" href="./css/style-olho.css">
  <title>Crie sua conta</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>

<body>

  <div class="box">
    <div class="img-box">
      <img src="./img/backgound azul.webp">
    </div>
    <div class="form-box">
      <h2>Criar Conta</h2>
      <p> Já é um membro? <a href="#"> Login </a> </p>

      <form method="post">
        <div class="input-group">
          <label asp-for="nome"> Nome Completo</label>
          <input asp-for type="text" id="nome" placeholder="Digite o seu nome completo" />
        </div>

        <div class="input-group">
          <label  asp-for="email">E-mail</label>
          <input asp-for type="email" id="email" placeholder="Digite o seu email" required>
        </div>

        <div class="input-group">
          <label  asp-for="telefone">Telefone</label>
          <input asp-for type="tel" id="" placeholder="Digite o seu telefone" required>
        </div>
        <div class="input-group">
          <label  asp-for="telefone">Cep</label>
          <input asp-for onblur="pesquisacep(this.value)" type="tel" id="" placeholder="Digite o seu Cep" required>
        </div>
        <div class="input-group">
          <label  asp-for="telefone">CPF</label>
          <input asp-for type="tel" id="" placeholder="Digite o seu CPF" required>
        </div>
        <div class="input-group">
          <label  asp-for="telefone">Data de Nascimento</label>
          <input asp-for type="tel" id="" placeholder="Digite a sua Data de Nascimento" required>
        </div>
        <div class="input-group w50">
          <label  asp-for="senha">Senha</label>
          <div class="estilo-input">
            <input asp-for senha type="password" id="senha" placeholder="Digite sua senha" required>
            <i onclick="hideSenha()" id="btnSenha" class="bi bi-eye-slash"></i>
          </div>
        </div>
        <div class="input-group w50">
          <label  asp-for="Confirmarsenha">Confirmar Senha</label>
          <div class="estilo-input">
            <input asp-for senha type="password" id="ConfirmarSenha" placeholder="Confirme a senha" required>
            <i onclick="hideConfirmSenha()" id="btnConfirmSenha" class="bi  bi-eye-slash"></i>
          </div>
        </div>
        
        <div id="botaocadastrar" class="input-group">
              <button>Cadastrar</button>
            </div>
        </div>

      </form>

    <script src="script.js"></script>
    <script src="./js/viacep.js"></script>
  </div>
</body>
</html>
