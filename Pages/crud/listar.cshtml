@page
@model Ecommerce_CyberKnight.Pages.crud.listarModel
@{
}
<a class=" btn btn-primary" asp-page="./incluir">
    incluir
</a>

 <table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Cpf</td>
            <td>Nome</td>
            <td>Login</td>
            <td>Email</td>
            <td>Senha</td>
            <td>Telefone</td>
            <td>Cep</td>
            <td>Ações</td>
        </tr>
    </thead>
    <tbody>@foreach(var cliente in Model.Clientes){
        <tr>
            <td>@cliente.Id</td>
            <td>@cliente.Cpf</td>
            <td>@cliente.Nome</td>   
            <td>@cliente.Email</td>
            <td>@cliente.Login</td>
            <td>@cliente.Senha</td>
            <td>@cliente.Telefone</td>
            <td>@cliente.Cep</td>
            <td>
                <a
                    asp-page="./alterar"
                    asp-route-id="@cliente.Id"
                    class="btn btn-primary"
                 >
                    Editar

                </a>



                <form
                    method="post"
                    asp-page-handler="delete"
                    asp-route-id="@cliente.Id"
                >
                    <button class="btn btn-danger">Excluir</button>

                </form>
            </td>
        </tr>        
      
    }</tbody>
</table>