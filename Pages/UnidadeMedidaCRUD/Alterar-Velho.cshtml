@{
}

<h1>Editar Unidade de Medida</h1>

<form method="post">
    <input class="form-control" type="hidden" asp-for="unidadeMedida.Id" />

    <div class="row">

        <div class="col-4">
            <label asp-for="unidadeMedida.NomeExtenso">Nome Extenso:</label>
            <input class="form-control" asp-for="unidadeMedida.NomeExtenso" />
