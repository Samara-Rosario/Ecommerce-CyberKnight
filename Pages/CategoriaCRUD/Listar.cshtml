@page
@model Ecommerce_CyberKnight.Pages.CategoriaCRUD.ListarModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Listagem de Categoria</title>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/categoria/listagem/style-tela-listagem-categoria.css">
</head>

<body>
    <div class="col-12">
        <header>
            <div>
                <button>Início</button>
                <span id="traco">|</span>
                <span id="produto">Produtos</span>
                <span id="clientes">Clientes</span>
                <span id="categoria">Categorias</span>
                <span id="unid">Unidade de Medida</span>
            </div>
            <div>
                <i id="carrinho" class="bi bi-cart"></i>
                <span id="traco-dois">|</span>
                <i id="sair" class="bi bi-box-arrow-right"></i>
            </div>
        </header>
        <header id="linha1">
            <h1>Listagem de Categorias</h1>
            <a asp-page="./Incluir">
               <button id="btn-incluir" class="btn btn-primary">Incluir</button>
            </a>
        </header>
        <div class="flex-container">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-1" scope="col"><span>ID</span></th>
                        <th class="col-3" scope="col"><span>Nome</span></th>
                        <th class="col-5" scope="col"><span>Descrição</span></th>
                        <th class="col-btn" scope="col" style="background-color: white;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Categoria in Model.Categorias) {
                    <tr>
                        <td scope="row">@Categoria.Id</td>
                        <td>@Categoria.Nome</td>
                        <td>@Categoria.Descricao</td>
                        <td>
                            <div class="container-btns">
                                <a asp-page="./Alterar" asp-route-id="@Categoria.Id">
                                    <button id="btn-editar" type="button" class="btn btn-primary">Editar</button>
                                </a>
                                <form method="post"
                                      asp-page-handler="delete"
                                      asp-route-id="@Categoria.Id">
                                    <button id="btn-excluir" type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                             </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
</body>

</html>
