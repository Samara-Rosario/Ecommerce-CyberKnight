@page
@model Ecommerce_CyberKnight.Pages.CategoriaCRUD.IncluirModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incluir Categoria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/categoria/incluir/style-tela-incluir-categoria.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="row">
        <img id="logo" src="~/img/assets/categoria/incluir/logo.webp" alt="" style="width: 130px;">
        <div id="barra-lateral" class="col-3">
            <label id="letreiro">Cyber Knights<br>E-commerce</label>
        </div>
        <div class="col-9">
            <header>
                <div>
                    <button>Início</button>
                    <span id="traco">|</span>
                    <span id="produto">Produtos</span>
                    <span id="clientes">Clientes</span>
                    <span id="categoria">Categorias</span>
                    <span id="unid">Unidade de Medida</span>
                </div>
                <div>
                    <i id="carrinho" class="bi bi-cart"></i>
                    <span id="traco-dois">|</span>
                    <i id="sair" class="bi bi-box-arrow-right"></i>
                </div>
            </header>

            <form method="post">
            <div class="flex-container">
                <div id="card-login">
                    <br>
                    <br>
                    <h1>Incluir Nova Categoria</h1>
                    <label>Nome:</label>
                    <div>
                    <input class="form-control" asp-for="categoria.Nome" type="text">
                    <br />
                            <span asp-validation-for="categoria.Nome" class="text-danger msg-erro"></span>
                    </div>
                    <br>
                    <br>
                    <br>
                    <div>
                        <label>Descrição:</label>
                    </div>
                    <input class="form-control" asp-for="categoria.Descricao" type="text">
                    <br />
                    <span asp-validation-for="categoria.Descricao" class="text-danger msg-erro"></span>
                    <br>
                    <button id="btn-enviar" type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </div>
            </form>
        </div>
    </div>
</body>

</html>
